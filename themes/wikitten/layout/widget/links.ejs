<% if (site.posts.length) { %>
    <div class="widget-wrap widget-list" id="linksWidget">
        <h3 class="widget-title"><span><i class="fa fa-link"></i></span><%= __('sidebar.links') %></h3>
        <div class="widget">
            <div class="links-btn-container">
                <% for (var i in theme.miscellaneous.links) { %>
                    <a class="link-btn" href="<%- theme.miscellaneous.links[i] %>" target="_blank" title="<%= i %>"><i class="fa fa-link"></i><%= i %></a>
                <% } %>
            </div>
        </div>
    </div>
<% } %>
